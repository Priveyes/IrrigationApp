<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adj"
        android:textColor="#2b0909"
        android:id="@+id/adjusted"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag1"
        android:layout_below="@+id/adjusted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wettedarea"
        android:textColor="#2b0909"
        android:hint="@string/W"
        android:inputType="numberDecimal"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ww"
        android:textColor="#2b0909"
        android:id="@+id/wwidth"
        android:textSize="15sp"
        android:layout_below="@+id/frag1"
        android:layout_toLeftOf="@+id/textView26"
        android:layout_toStartOf="@+id/textView26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NP"
        android:textColor="#2b0909"
        android:id="@+id/SP"
        android:textSize="15sp"
        android:layout_below="@+id/wwidth"
        android:layout_alignLeft="@+id/wwidth"
        android:layout_alignStart="@+id/wwidth" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/space"
        android:textSize="15sp"
        android:id="@+id/SR"
        android:textColor="#2b0909"
        android:layout_below="@+id/SP"
        android:layout_alignLeft="@+id/SP"
        android:layout_alignStart="@+id/SP" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag2"
        android:layout_below="@+id/SR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Sp"
        android:inputType="numberDecimal"
        android:id="@+id/distance" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag3"
        android:layout_below="@+id/frag2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Sr"
        android:id="@+id/rowdistance"
        android:textColor="#2b0909"
        android:inputType="numberDecimal"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comp"
        android:textColor="#2b0909"
        android:id="@+id/adjbtn"
        android:layout_below="@id/frag3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ans"
        android:id="@+id/percent"
        android:layout_below="@+id/adjbtn"
        android:textColor="#2b0909"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/previous"
        android:layout_alignParentBottom="true"
        android:textColor="#2b0909"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_forward_black_24dp"
        android:textColor="#2b0909"
        android:id="@+id/bnext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per cent"
        android:textColor="#2b0909"
        android:id="@+id/textView26"
        android:layout_below="@+id/adjbtn"
        android:layout_toLeftOf="@+id/bnext"
        android:layout_toStartOf="@+id/bnext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adjust"
        android:id="@+id/adjbutton"
        android:layout_above="@+id/bnext"
        android:layout_marginBottom="42dp"
        android:layout_toRightOf="@+id/previous"
        android:layout_toLeftOf="@+id/bnext"
        android:layout_toStartOf="@+id/bnext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ww"
        android:textSize="15sp"
        android:textColor="#2b0909"
        android:id="@+id/textView31"
        android:layout_above="@+id/SP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/metres"
        android:textColor="#2b0909"
        android:id="@+id/textView34"
        android:layout_alignTop="@+id/wwidth"
        android:layout_toRightOf="@+id/textView26"
        android:layout_toEndOf="@+id/textView26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/metres"
        android:textColor="#2b0909"
        android:id="@+id/textView35"
        android:layout_below="@+id/SP"
        android:layout_alignLeft="@+id/textView34"
        android:layout_alignStart="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NEP"
        android:textColor="#2b0909"
        android:id="@+id/textView36"
        android:layout_above="@+id/SR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space"
        android:textColor="#2b0909"
        android:id="@+id/textView37"
        android:layout_below="@+id/SP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

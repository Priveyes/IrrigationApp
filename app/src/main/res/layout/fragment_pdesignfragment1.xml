<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.example.meedy.irrigationapp.Pdesignfragment1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="@string/fra"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:textColor="#2b0909"
        android:id="@+id/pre"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dnt"
        android:textSize="20sp"
        android:textColor="#2b1010"
        android:id="@+id/tv2"
        android:layout_above="@+id/AM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:id="@+id/AM"
        android:text="@string/fc"
        android:hint="@string/fc"
        android:layout_above="@+id/RZD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:id="@+id/RZD"
        android:hint="@string/rz"
        android:layout_above="@+id/MAD"
        android:layout_alignRight="@+id/AM"
        android:layout_alignEnd="@+id/AM" />

    <EditText
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:id="@+id/MAD"
        android:hint="@string/dep"
        android:layout_above="@+id/btNCOMP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comp"
        android:textColor="#2b0909"
        android:id="@+id/btNCOMP"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/MAD"
        android:layout_toEndOf="@+id/MAD" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:hint="@string/ans"
        android:textColor="#2b0909"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/btNCOMP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


